{
  "name": "graphql-auth-user-directives",
  "version": "2.4.4",
  "description": "Add authorization to your GraphQL API using schema directives.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "nodemon ./examples/index.js --exec babel-node -e js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "build": "babel src --out-dir dist",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "pretest": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nmeibergen/graphql-auth-user-directives.git"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "apollo-cache-inmemory": "^1.4.2",
    "apollo-client": "^2.4.12",
    "apollo-link-http": "^1.5.11",
    "apollo-server": "^2.2.5",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "dotenv": "^6.2.0",
    "dotenv-override": "^5.0.1",
    "graphql-type-json": "^0.3.1",
    "husky": "^1.1.2",
    "jest": "^26.0.1",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.13.5"
  },
  "keywords": [
    "GraphQL",
    "authorization",
    "neo4j",
    "user"
  ],
  "author": "Nathan Meibergen",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nmeibergen/graphql-auth-user-directives/issues"
  },
  "jest": {
    "verbose": true,
    "globalSetup": "<rootDir>/test/setup.js",
    "moduleDirectories": [
      "node_modules",
      "src",
      "tests"
    ],
    "projects": [
      {
        "testTimeout": 10000
      }
    ]
  },
  "homepage": "https://github.com/nmeibergen/graphql-auth-user-directives#readme",
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "apollo-server-testing": "^2.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^4.0.4",
    "jest": "^26.0.1",
    "jsonwebtoken": "^8.3.0",
    "node-fetch": "^2.6.0"
  },
  "peerDependencies": {
    "graphql": "~15.x"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  }
}
